<LoginLayout title="Login">
  <Header />
  <div class="main-content">
    <h1 id="main-content-title" class="main-content-title">UFABET</h1>
    <CollapsibleContent content={loremIpsumContent} />
    <LoginBox />
  </div>
  <TabMenu items={tabItems} />
  <AccordionSection
    title="ประเภทของการแทงบอลที่คุณสามารถทำได้มีอะไรบ้าง?"
    content={{
      text: loremIpsumContent,
      image: {
        src: 'https://ufshseo-cdn.mybet789.com/เดิมพันฟุตบอล.avif',
        srcsetSmall: 'https://ufshseo-cdn.mybet789.com/เดิมพันฟุตบอล-small.avif',
        srcsetMedium: 'https://ufshseo-cdn.mybet789.com/เดิมพันฟุตบอล-medium.avif',
        alt: 'ตัวเลือกการเดิมพันฟุตบอลบน UFABET',
      },
    }}
  />
  <AccordionSectionWithExpand title="Ufabet แทงบอล คืออะไร?" content={footballDescription} />

  <GameBox
    title={gameData.title}
    description={gameData.description}
    imageUrl={gameData.imageUrl}
    stats={gameData.stats}
  />
</LoginLayout>
