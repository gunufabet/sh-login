---
import { Image } from "astro:assets";

const logo = "/img/ubet-logo.avif";
const currentLang = "th";
const languages = [
    { code: "th", name: "ภาษาไทย", flag: "/img/lang/th.avif" },
    { code: "en", name: "English", flag: "/img/lang/en.avif" },
    { code: "id", name: "Indonesia", flag: "/img/lang/id.avif" },
    { code: "vn", name: "Tiếng Việt", flag: "/img/lang/vn.avif" },
    { code: "kh", name: "ភាសាខ្មែរ", flag: "/img/lang/km.avif" },
    { code: "la", name: "ລາວ", flag: "/img/lang/laos.avif" },
    { code: "mm", name: "မြန်မာ", flag: "/img/lang/mm.avif" },
    { code: "cn", name: "简体中文", flag: "/img/lang/cn.avif" },
    { code: "es", name: "Spanish", flag: "/img/lang/es.avif" },
    { code: "ru", name: "Russian", flag: "/img/lang/ru.avif" },
    { code: "pt", name: "Português", flag: "/img/lang/pt.avif" },
    { code: "fr", name: "Français", flag: "/img/lang/fr.avif" },
];
---

<header class="header-sticky">
    <div class="header-layout">
        <div class="header-layout-container">
            <div class="header-layout-menu">
                <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    class="pr-2"
                >
                    <path
                        fill-rule="evenodd"
                        d="M3.95 6h16.1c.525 0 .95.425.95.95v.1a.95.95 0 01-.95.95H3.95A.95.95 0 013 7.05v-.1c0-.525.425-.95.95-.95zm16.1 5H3.95a.95.95 0 00-.95.95v.1c0 .525.425.95.95.95h16.1a.95.95 0 00.95-.95v-.1a.95.95 0 00-.95-.95zm0 5H3.95a.95.95 0 00-.95.95v.1c0 .525.425.95.95.95h16.1a.95.95 0 00.95-.95v-.1a.95.95 0 00-.95-.95z"
                        fill="currentColor"></path>
                </svg>
            </div>
            <div class="header-layout-logo">
                <Image
                    class="header-layout-logo-img"
                    width={128}
                    height={22}
                    src={logo}
                    alt="UFABET"
                />
            </div>
        </div>
        <div class="header-layout-btn-container">
            <div class="lang-container dropdown" id="langDropdown">
                <img
                    class="lang-img"
                    src={`/img/lang/${currentLang}.avif`}
                    alt={languages.find((l) => l.code === currentLang)?.name}
                />
                <span class="lang-text">{currentLang.toUpperCase()}</span>
                <ul
                    style="display:none;"
                    class="dropdown-menu language-menu"
                    id="languageMenu"
                >
                    {
                        languages.map((lang) => (
                            <li class="dropdown-item">
                                <a
                                    href={lang.code === currentLang ? "#" : `#`}
                                    class="dropdown-item-text"
                                >
                                    <img
                                        class="lang-img"
                                        src={lang.flag}
                                        alt={lang.name}
                                    />
                                    <span>{lang.name}</span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <button class="custom-btn-container btn-type btn-text"
                ><span class="register-btn-text">เข้าสู่ระบบ</span></button
            >
        </div>
    </div>
</header>

<style>
    .header-layout-container {
        display: flex;
        flex-direction: row;
        column-gap: 0.5rem;
        align-items: center;
    }

    @media (max-width: 768px) {
        .header-sticky {
            background: #2B2B32;
        }
    }
</style>
